<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header.ejs") %>
  <body>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/orders">History</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
    <div class="container mt-5 w-50">
    <h6 class="text-center">Signed in as: <%= staffName %> </h6>
    <h2 class="text-center m-5">Pending Requests</h2>
    <% if (isEmpty) { %>

    <p class="text-center mt-4">You have no requests</p>

    <% } else { %>
      <% records.forEach((element) => { %> 
      <% const {docId, name, email, symptoms, symptomDays, deliverTo} = element %>
      <form class="card mt-3 p-2" action="/medicalStaff" method="post">
        <input type="text" name="docId" value="<%= docId %>" hidden />
        <div class="mb-3 row">
          <label for="name" class="col-sm-2 col-form-label">Name:</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control-plaintext"
              name="name"
              id="name"
              value="<%= name %>"
              readonly
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="email" class="col-sm-2 col-form-label">Email:</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control-plaintext"
              name="email"
              id="email"
              value="<%= email %>"
              readonly
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="symptoms" class="col-sm-2 col-form-label">
            Symptoms:
          </label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control-plaintext"
              name="symptoms"
              id="symptoms"
              value="<%= symptoms %>"
              readonly
            />
          </div>
        </div>
        <div class="mb-3 row form-group">
          <label for="symptomDays" class="col-sm-2 col-form-label">
            Days with symptoms:
          </label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control-plaintext"
              name="symptomDays"
              id="symptomDays"
              value="<%= symptomDays %>"
              readonly
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="deliverTo" class="col-sm-2 col-form-label">
            Deliver To:
          </label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control-plaintext"
              name="deliverTo"
              value="<%= deliverTo %>"
              readonly
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="prescription" class="col-sm-2 col-form-label">
            Prescription:
          </label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              name="prescription"
              id="prescription"
              required
            />
          </div>
        </div>
        <button type="submit" class="btn btn-dark">submit</button>
      </form>

      <% }) %> <% } %>
    </div>
  </body>
</html>
